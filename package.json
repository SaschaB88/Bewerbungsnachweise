    "rebuild:node": "npm rebuild better-sqlite3"
  },
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.4",
    "electron": "^38.2.0",
    "vite": "^7.1.7"
  },
  "dependencies": {
    "better-sqlite3": "^12.4.1",
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}
