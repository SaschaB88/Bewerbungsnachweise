{
  "name": "bewerbungs-cockpit",
  "version": "0.0.0",
  "private": true,
  "description": "MVP Electron-style app with dashboard and Node tests",
  "main": "electron/main.js",
  "scripts": {
    "start": "node scripts/start.js",
    "start:electron": "electron .",
    "dev": "vite",
    "build:renderer": "vite build",
    "build:electron": "electron-builder",
    "build": "npm run build:renderer && npm run build:electron",
    "test": "node --test",
    "db:migrate": "node scripts/migrate.js",
    "db:seed": "node scripts/seed.js"
  },
  "author": "",
  "license": "UNLICENSED",
  "devDependencies": {
    "@vitejs/plugin-react": "^5.0.4",
    "electron": "^25.0.0",
    "electron-builder": "^23.6.0",
    "vite": "^7.1.7"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  },
  "build": {
    "appId": "com.example.bewerbungs-cockpit",
    "productName": "Bewerbungs-Cockpit",
    "files": [
      "dist/**",
      "electron/**",
      "preload/**",
      "src/**",
      "node_modules/**",
      "package.json",
      "data/**"
    ],
    "extraResources": [
      {
        "from": "data",
        "to": "data",
        "filter": [
          "**/*"
        ]
      }
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "zip"
      ]
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "zip"
      ]
    }
  }
}
